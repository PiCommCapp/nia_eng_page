# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# HTML files
[*.{html,htm}]
indent_size = 2
max_line_length = 100

# CSS files
[*.{css,scss,sass}]
indent_size = 2

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2
insert_final_newline = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Documentation
[{README.md,LICENSE,docs/**/*.md}]
max_line_length = 80

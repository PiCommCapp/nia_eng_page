{
  "recommendations": [
    // HTML/CSS/JavaScript core extensions
    "ritwickdey.liveserver", // Live Server for local development
    "esbenp.prettier-vscode", // Prettier code formatting
    "dbaeumer.vscode-eslint", // ESLint for JavaScript linting

    // HTML enhancements
    "formulahendry.auto-close-tag", // Automatically close HTML tags
    "formulahendry.auto-rename-tag", // Automatically rename paired HTML tags

    // CSS enhancements
    "ecmel.vscode-html-css", // CSS class intellisense for HTML
    "anysphere.cursorpyright",
    "charliermarsh.ruff",
    "mikestead.dotenv",

    // Markdown support
    "yzhang.markdown-all-in-one", // Markdown tools and preview
    "davidanson.vscode-markdownlint", // Markdown linting
    "bierner.markdown-mermaid", // Mermaid support for Markdown

    // Productivity tools
    "streetsidesoftware.code-spell-checker", // Spell checking
    "editorconfig.editorconfig", // EditorConfig support
    "christian-kohler.path-intellisense", // Path autocompletion
    "mutantdino.resourcemonitor", // Resource monitor

    // Git integration
    "eamodio.gitlens", // Git blame and history
    "mhutchie.git-graph", // Git graph visualization

    // Terminal and shell
    "ms-vscode.vscode-json", // JSON language support
    "tamasfe.even-better-toml", // TOML language support

    // Documentation and productivity
    "shd101wyy.markdown-preview-enhanced", // Enhanced markdown preview
    "gruntfuggly.todo-tree", // TODO tree view
    "alefragnani.bookmarks" // Code bookmarks
  ],
  "unwantedRecommendations": [
    // Microsoft extensions we want to avoid
    "ms-python.python",
    "ms-python.pylint",
    "ms-vscode.vscode-json",
    "visualstudioexptteam.vscodeintellicode"
  ]
}
